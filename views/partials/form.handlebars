
<form class="inline-form" method="post" action="/">
	<div class="radio">
		<label>
			<input name="faction" value="good" type="radio" id="faction-good"/>
			Good
		</label>
		<label>
			<input name="faction" value="evil" type="radio" id="faction-evil"/>
			Evil
		</label>
	</div>

	<div class="form-group">
		<label for="food">Favorite Food</label>
		<input name="food" class="form-control" type="text" id="food"/>
	</div>
  <div class="form-group">
		<label for="color">
			Favorite Color
		</label>
    <select name="color" id="color">
			<option value="none">
				Select a color
			</option>
			<option value="blue">Blue</option>
			<option value="red">Red</option>
			<option value="green">Green</option>
			<option value="black">BLACK</option>
  </select>
  </div>

	<div class="form-group">
		<input name="insanity"
						id="insanity" data-slider-id='ex1Slider' type="text"
						data-slider-min="1" data-slider-max="20"
						data-slider-step="2" data-slider-value="0"/>
	</div>

  <div class="form-group">
    <input type="submit" class="btn btn-success" />
  </div>
</form>
