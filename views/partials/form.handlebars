
<form class="inline-form" method="post" action="/">
	<div class="radio">
		<label>
			<input name="faction" value="good" type="radio" />
			Good
		</label>
		<label>
			<input name="faction" value="evil" type="radio" />
			Evil
		</label>
	</div>

	<div class="form-group">
		<label for="favorite-food">Favorite Food</label>
		<input name="food" class="form-control" type="text" id="favorite-food"/>
	</div>
  <div class="form-group">
		<label for="favorite-color">
			Favorite Color
		</label>
    <select name="color" id="favorite-color">
			<option value="none">
				Select a color
			</option>
			<option value="blue">Blue</option>
			<option value="red">Red</option>
			<option value="green">Green</option>
			<option value="black">BLACK</option>
  </select>
  </div>

	<div class="form-group">
		<input name="insanity"
						id="ex1" data-slider-id='ex1Slider' type="text"
						data-slider-min="0" data-slider-max="20"
						data-slider-step="1" data-slider-value="0"/>
	</div>

  <div class="form-group">
    <input type="submit" class="btn btn-success" />
  </div>
</form>
